                +e.BUTTON.__btn(tabindex='-1')
                  +isvg#search
      .container-fluid
        .row
          .col-6
            +b.TABLE.table-data.w-100
              thead
                tr
                  th ID
                  th Hash
                  th Age
                  th Count
              tbody
                tr
                  td 707
